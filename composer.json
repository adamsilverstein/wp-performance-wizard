{
    "name": "adamjs/wp-performance-wizard",
    "description": "A plugin that uses AI to help you optimize your WordPress site for performance.",
    "type": "project",
    "license": "GPLv2 or later",
    "authors": [
        {
            "name": "Adam Silverstein",
            "email": "adamjs@google.com"
        }
    ],
    "require": {
        "squizlabs/php_codesniffer": "^3.10",
        "wp-coding-standards/wpcs": "^3.1",
        "phpcompatibility/phpcompatibility-wp": "^2.1",
        "slevomat/coding-standard": "^8.15"
    },
    "scripts": {
        "lint": "phpcs",
        "format": "phpcbf --report-summary --report-source",
        "phpstan": "phpstan analyse --memory-limit=2048M"
    }
}
